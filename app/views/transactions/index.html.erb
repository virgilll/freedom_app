
<div class="index-background">
  <div class="container">

    <div class="row justify-content-center">
      <div class="col-8">
          <div class="something-box">
            <h1 class="title-transaction my-4" >My Transaction List</h1>
            <div class="transaction-list" >
                <% @transactions_by_date.each do |date, transaction_list| %>
                  <h3 class="transaction-date my-3"><%= date.strftime("%B %e %Y") %></h3>
                    <div class="date-transactions">
                      <% transaction_list.each do |transaction| %>
                        <div class="transaction-details">
                          <div class="transaction-description">
                            <h5><strong> Description </strong> </h5>
                            <p><%= transaction.description %> - <%= transaction.amount %>$</p>
                          </div>
                          <div class="transaction-amount">
                            <h5><strong> Round up </strong> </h5>
                            <p><%= transaction.rounded_amount.to_f.round(2) %>$</p>
                          </div>
                          <div class="transaction-btc">
                            <h5><strong> BTC Purchased </strong> </h5>
                            <p><%= transaction.coin_amount.round(5) %></p>
                          </div>
                        </div>
                        <hr class="mt-1 mb-3">
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
