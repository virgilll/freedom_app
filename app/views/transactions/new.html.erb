<div class="add-transaction">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="add-form">
          <h1 class="transaction-header"><strong>+</strong> Add a Transaction </h1>
          <%= simple_form_for @transaction do |t| %>
            <%= t.input :description, label:"Description of the transaction", as: :string %>
            <%= t.input :amount, label: "Amout of the transaction" %>
            <%= t.input :transaction_date, label:"Date of transaction", as: :date %>
            <div class="add_button">
              <%= t.button :submit, "+ Add Transaction", class: "btn btn-light btn-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
