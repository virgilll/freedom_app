<div class="container rounded bg-white mt-5">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><span class="font-weight-bold"><%=current_user.first_name %> <%=current_user.last_name %> </span><span class="text-black-50"><%=current_user.email %></span><span>Morocco</span></div>
        </div>
        <div class="col-md-8">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex flex-row align-items-center back"><i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><input type="text" class="form-control" placeholder="first name" value=<%=current_user.first_name %>></div>
                    <div class="col-md-6"><input type="text" class="form-control" value=<%=current_user.last_name %>></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><input type="text" class="form-control" placeholder="Email" value=<%=current_user.email %>></div>
                    <div class="col-md-6"><input type="text" class="form-control" value="+212661126543" placeholder="Phone number"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><input type="text" class="form-control" placeholder="address" value="3, Avenue Mohammed VI, Rabat"></div>
                    <div class="col-md-6"><input type="text" class="form-control" value="Morocco" placeholder="Country"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><input type="text" class="form-control" placeholder="Bank Name" value="Bank of Morocco"></div>
                    <div class="col-md-6"><input type="text" class="form-control" value="043*********95" placeholder="Account Number"></div>
                </div>
                <div class="mt-5 text-right"><button class="btn btn-primary-settings profile-button" type="button">Save Profile</button></div>
            </div>
        </div>
    </div>
</div>
