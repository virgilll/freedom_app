<div class="background-art">
</div>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="row">
        <div class="col-6">
          <div class="dashboard-card">
            <h3 class="text-wallet">Wallet</h3>
            <div class="balance-circles">
              <div class="balance-circle">
                <h3 class="text-circle"> Balance</h3>
                <div class="text-center">
                  <h3>$<%= @dollar_balance %></h3>
                  <p id="explanation" style="font-size:14px;"> Round Ups + Earnings </p>
                </div>
                <div></div>
              </div>
              <div class="balance-circle">
                <h3 class="text-circle">Earnings</h3>
                <h3 class="price-up">+ $<%= @earnings %></h3>
              <div></div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="dashboard-card">
            <h3 class="text-graph">Bitcoin 5yr Chart</h3>
            <%= line_chart @final_data %>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-12">
          <div class="dashboard-card">
            <h3 class="text-balance">Asset Overview</h3>
            <div class="holdings-info">
              <div class="holding-item">
                <p> <strong> Asset </strong> </p>
                <p>BTC</p>
              </div>
              <div class="holding-item">
              <p> <strong> Coin Balance </strong></p>
             <p><%=@coin_balance%></p>
              </div>

              <div class="holding-item">
                <p> <strong>Price </strong> </p>
                  <p> $<%= Coin.current_price.to_i %> </p>
              </div>
              <div class="holding-item">
                <p> <strong> % Return </strong> </p>
               <p class="price-up">  <%=(@earnings_percentage*100).round(2) %></p>
              </div>


            </div>

          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-12">
          <div class="dashboard-card-below">
            <h3 class="text-balance">My Porfolio Summary</h3>
            <div class="holdings-info">
              <div class="holding-item">
                <p> <strong> Asset </strong> </p>
                <p>BTC</p>
              </div>
              <div class="holding-item">
              <p> <strong> Coin Balance </strong></p>
             <p><%=@coin_balance%></p>
              </div>

              <div class="holding-item">
                <p> <strong>Price </strong> </p>
                  <p> $<%= Coin.current_price.to_i %> </p>
              </div>
              <div class="holding-item">
                <p> <strong> % Return </strong> </p>
               <p class="price-up">  <%=(@earnings_percentage*100).round(2) %></p>
              </div>


            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

</div>


<h4>Your first round up was on <%= @transactions.order(transaction_date: :desc).last.transaction_date.strftime("%d/%m/%Y") %></h4>
<h4>You had <%= @transactions.count  %> amount of roundups.</h4>
<h4>Your return on investment is % <%= (@earnings_percentage*100).round(2)%></h4>
<h4>The amount of Bitcoin you've accumulated <%= @coin_balance%></h4>
